{
	"compilerOptions": {
		"target": "es2015",
		"module": "es2015",
		"moduleResolution": "node",

		"outDir": "esm",
		"declaration": true,

		"lib": [
			"es2015",
			"es2016",
			"es2017"
		],
		"typeRoots": [
			"node_modules/@types",
			"src/@types"
		],

		"experimentalDecorators": true,
		"emitDecoratorMetadata": true
	},

	"exclude": [
		"node_modules",
		"dist"
	]
}
