{
	"compilerOptions": {
		"target": "es2015",
		"module": "es2015",
		"moduleResolution": "node",

		"lib": [
			"es2015",
			"es2016",
			"es2017"
		],
		"typeRoots": [
			"node_modules/@types",
			"src/@types"
		],

		"experimentalDecorators": true,
		"emitDecoratorMeatdata": true
	},

	"exclude": [
		"node_modules"
	]
}
