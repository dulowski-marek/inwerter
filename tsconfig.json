{
	"compilerOptions": {
		"target": "es2015",
		"module": "CommonJS",
		"moduleResolution": "node",
		"esModuleInterop": true,

		"rootDir": "src",
		"outDir": "dist",
		"declaration": true,

		"lib": [
			"es2015",
			"es2016",
			"es2017"
		],
		"typeRoots": [
			"node_modules/@types",
			"src/@types"
		],

		"experimentalDecorators": true,
		"emitDecoratorMetadata": true
	},

	"exclude": [
		"packages",
		"test",
		"node_modules",
		"dist",
		"setupTests.ts"
	]
}
